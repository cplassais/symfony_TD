{% extends 'base.html.twig' %}

{% form_theme productForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <h3>FORMULAIRE AJOUT PRODUIT</h3>
    {{ form_start(productForm) }}
{#    {{ form_widget(productForm) }}#}
    {{ form_row(productForm.name, {
        label: 'Nom'
    }) }}
    {{ form_row(productForm.description, {
        label: 'Description'
    }) }}
    {{ form_row(productForm.price, {
        label: 'Prix'
    }) }}
    <button type="submit" class="btn btn-outline-primary">Enregistrement</button>
    {{ form_end(productForm) }}
{% endblock %}

