{% extends 'base.html.twig' %}

{% form_theme categoryForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <h3>FORMULAIRE AJOUT PRODUIT</h3>
    {{ form_start(categoryForm) }}
{#    {{ form_widget(categoryForm) }}#}
    {{ form_row(categoryForm.name, {
        label: 'Nom'
    }) }}
    {{ form_row(categoryForm.description, {
        label: 'Description'
    }) }}
    {{ form_row(categoryForm.image, {
        label: 'Image',
        value: 'https://picsum.photos/200/200?random=1'
    }) }}
    <button type="submit" class="btn btn-outline-primary">Enregistrement</button>
    {{ form_end(categoryForm) }}
{% endblock %}

