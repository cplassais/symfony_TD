{% extends 'base.html.twig' %}

{% form_theme brandForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="d-flex justify-content-center">
    <form method="post" style="width:50%;">
    <h3 class="text-center">FORMULAIRE AJOUT MARQUE</h3>
    {{ form_start(brandForm) }}
{#    {{ form_widget(brandForm) }}#}
    {{ form_row(brandForm.name, {
        label: 'Nom'
    }) }}
    {{ form_row(brandForm.logo, {
        label: 'Logo',
        value: 'logo.jpg'
    }) }}
    <button type="submit" class="btn btn-outline-primary">Enregistrement</button>
    {{ form_end(brandForm) }}
    </form>
    </div>
{% endblock %}

